# ===========================================
# NAVDRISHTI ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values
# This file is safe to commit to GitHub (no sensitive data)

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
APP_NAME=Navdrishti
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ===========================================
# SUPABASE CONFIGURATION (Primary Database)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long
SESSION_MAX_AGE=604800000
SESSION_SECURE=false
SESSION_SAME_SITE=lax

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CLOUDINARY CONFIGURATION (Image Upload)
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,webp

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@navdrishti.com
FROM_NAME=Navdrishti

# ===========================================
# SMS CONFIGURATION
# ===========================================
# MSG91 SMS Service (Primary)
MSG91_API_KEY=your_msg91_api_key_here
MSG91_TEMPLATE_ID=your_template_id_here

# Alternative SMS Providers
# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# PAYMENT CONFIGURATION (RAZORPAY)
# ===========================================
# For development use test keys (rzp_test_), for production use live keys (rzp_live_)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# VERIFICATION SYSTEM CONFIGURATION
# ===========================================
# Email & Phone Verification Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_DOCUMENT_VERIFICATION=true

# ===========================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ===========================================

# DigiLocker Integration (Individual Verification)
DIGILOCKER_CLIENT_ID=your_digilocker_client_id_here
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret_here
DIGILOCKER_REDIRECT_URI=http://localhost:3000/api/auth/digilocker/callback
DIGILOCKER_BASE_URL=https://api.digitallocker.gov.in

# EntityLocker Integration (NGO & Company Verification)
ENTITYLOCKER_CLIENT_ID=your_entitylocker_client_id_here
ENTITYLOCKER_CLIENT_SECRET=your_entitylocker_client_secret_here
ENTITYLOCKER_REDIRECT_URI=http://localhost:3000/api/auth/entitylocker/callback
ENTITYLOCKER_BASE_URL=https://api.entitylocker.gov.in

# ===========================================
# SHIPPING PROVIDER CONFIGURATION (Optional)
# ===========================================
DELHIVERY_API_KEY=your_delhivery_api_token
DELHIVERY_ENABLED=false

BLUEDART_API_KEY=your_bluedart_api_key
BLUEDART_ENABLED=false

INDIAPOST_API_KEY=your_indiapost_api_key
INDIAPOST_ENABLED=false

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features as needed
ENABLE_MARKETPLACE=true
ENABLE_SERVICE_REQUESTS=true
ENABLE_SERVICE_OFFERS=true
ENABLE_CSR_FEATURES=true
ENABLE_NGO_FEATURES=true
ENABLE_INDIVIDUAL_FEATURES=true

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values (especially Supabase and Cloudinary)
# 3. For development, you only need Supabase and Cloudinary configured
# 4. Other services (SMTP, Razorpay, etc.) can be added later as needed
# 5. Never commit your actual .env file with real credentials to GitHub