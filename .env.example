# ===========================================
# NAVDRISHTI ENVIRONMENT CONFIGURATION
# ===========================================
# Single comprehensive environment file for all configurations

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
APP_NAME=Navdrishti
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ===========================================
# SUPABASE CONFIGURATION (Primary Database)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your_jwt_secret_here_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here_at_least_32_characters_long
SESSION_MAX_AGE=604800000
SESSION_SECURE=false
SESSION_SAME_SITE=lax

# Cron Jobs Security (Optional - for extra security on automated tasks)
CRON_SECRET=your_cron_secret_here_optional

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CLOUDINARY CONFIGURATION (Image Upload)
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_PRESET=your_cloudinary_upload_preset

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,webp

# ===========================================
# EMAIL CONFIGURATION (SMTP - TO BE CONFIGURED LATER)
# ===========================================
# Currently disabled - add your SMTP credentials when ready
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@navdrishti.com
# FROM_NAME=Navdrishti

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# ===========================================
# SMS CONFIGURATION (TO BE CONFIGURED LATER)
# ===========================================
# MSG91 SMS Service (Primary)
# MSG91_API_KEY=your_msg91_api_key_here
# MSG91_TEMPLATE_ID=your_template_id_here

# ===========================================
# PAYMENT CONFIGURATION (RAZORPAY - TO BE CONFIGURED LATER)
# ===========================================
# Currently disabled - add your Razorpay keys when ready
# NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxxxx
# RAZORPAY_KEY_SECRET=your_razorpay_secret_here
# RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# VERIFICATION SYSTEM CONFIGURATION
# ===========================================
# Email & Phone Verification
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_DOCUMENT_VERIFICATION=true

# OTP Configuration (for phone verification - TO BE CONFIGURED LATER)
# OTP_SERVICE_PROVIDER=msg91
# MSG91_API_KEY=your_msg91_api_key_here
# MSG91_TEMPLATE_ID=your_template_id_here

# ===========================================
# THIRD-PARTY INTEGRATIONS (TO BE CONFIGURED LATER)
# ===========================================

# DigiLocker Integration (Individual Verification)
# DIGILOCKER_CLIENT_ID=your_digilocker_client_id_here
# DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret_here
# DIGILOCKER_REDIRECT_URI=http://localhost:3000/api/auth/digilocker/callback
# DIGILOCKER_BASE_URL=https://api.digitallocker.gov.in

# EntityLocker Integration (NGO & Company Verification)
# ENTITYLOCKER_CLIENT_ID=your_entitylocker_client_id_here
# ENTITYLOCKER_CLIENT_SECRET=your_entitylocker_client_secret_here
# ENTITYLOCKER_REDIRECT_URI=http://localhost:3000/api/auth/entitylocker/callback
# ENTITYLOCKER_BASE_URL=https://api.entitylocker.gov.in

# ===========================================
# SHIPPING PROVIDER CONFIGURATION (TO BE CONFIGURED LATER)
# ===========================================
# DELHIVERY_API_KEY=your_delhivery_api_token
# DELHIVERY_ENABLED=false

# BLUEDART_API_KEY=your_bluedart_api_key
# BLUEDART_ENABLED=false

# INDIAPOST_API_KEY=your_indiapost_api_key
# INDIAPOST_ENABLED=false


# ===========================================
# PRODUCTION SETTINGS (Enable for production deployment)
# ===========================================
# When deploying to production, uncomment and configure these:

# SSL and Security
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# CSRF_SECRET=your_csrf_secret_here

# Monitoring and Logging
# LOG_LEVEL=info
# ENABLE_REQUEST_LOGGING=true
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ID=your_google_analytics_id_here