# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.production for production deployment
# Never commit this file with real values to version control

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
APP_NAME=Navdrishti
APP_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ===========================================
# REQUIRED SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key

# ===========================================
# REQUIRED AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-very-secure-jwt-secret-minimum-64-characters-long-for-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-very-secure-session-secret-minimum-64-characters-long
SESSION_MAX_AGE=604800000
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# REQUIRED CLOUDINARY CONFIGURATION
# ===========================================
CLOUDINARY_CLOUD_NAME=your-production-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-production-cloudinary-api-key
CLOUDINARY_API_SECRET=your-production-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-production-upload-preset

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,webp

# ===========================================
# PRODUCTION EMAIL CONFIGURATION (REQUIRED)
# ===========================================
SMTP_HOST=your-production-smtp-host
SMTP_PORT=587
SMTP_USER=your-production-smtp-user
SMTP_PASS=your-production-smtp-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Navdrishti

# ===========================================
# PRODUCTION SMS CONFIGURATION
# ===========================================
MSG91_API_KEY=your_production_msg91_api_key
MSG91_TEMPLATE_ID=your_production_template_id

# ===========================================
# PRODUCTION PAYMENT CONFIGURATION (REQUIRED)
# ===========================================
# Use live keys for production (rzp_live_)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_your_production_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_production_webhook_secret

# ===========================================
# PRODUCTION FEATURE FLAGS
# ===========================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_DOCUMENT_VERIFICATION=true
ENABLE_MARKETPLACE=true
ENABLE_SERVICE_REQUESTS=true
ENABLE_SERVICE_OFFERS=true
ENABLE_CSR_FEATURES=true
ENABLE_NGO_FEATURES=true
ENABLE_INDIVIDUAL_FEATURES=true

# ===========================================
# PRODUCTION MONITORING & ANALYTICS
# ===========================================
VERCEL_ANALYTICS=true
VERCEL_SPEED_INSIGHTS=true
SENTRY_DSN=your-production-sentry-dsn
LOG_LEVEL=error

# ===========================================
# PRODUCTION SECURITY
# ===========================================
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_DEV_TOOLS_PROTECTION=true
CSRF_SECRET=your-production-csrf-secret

# ===========================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# ===========================================
NEXT_TELEMETRY_DISABLED=1

# Enable strict SSL and security headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Disable development features
DISABLE_DEV_OVERLAY=true
DISABLE_FAST_REFRESH=true

# Performance optimizations  
NEXT_PRIVATE_OPTIMIZE_CSS=true
NEXT_PRIVATE_OPTIMIZE_FONTS=true

# Logging configuration
DISABLE_CONSOLE_LOGS=true

# Security headers
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin